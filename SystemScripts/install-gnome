rootuser () {
  if [[ "$EUID" = 0 ]]; then
    continue
  else
    echo "ERROR: Please run as root."
    exit 1
  fi
}

rootuser
echo "Currently installing GNOME."
sudo apt install -y gvfs-backends gnome-core gnome-software gnome-software-plugin-flatpak gnome-tweaks gnome-shell-extension-appindicator  gnome-shell-extension-manager
systemctl enable gdm
echo "GNOME has been installed."